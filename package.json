{
  "name": "blaster",
  "version": "0.0.0",
  "description": "A game about shooting things.",
  "main": "index.html",
  "scripts": {
    "build": "npm run build:prep && npm run build:statics && esbuild  src/game.js --bundle --outdir=dist --loader:.html=file --loader:.png=file --loader:.jpg=file --loader:.mp3=file --loader:.fnt=file",
    "build:prep": "mkdir -p dist && rm dist/*",
    "build:statics": "cp index.html dist/ && cp ./vendor/phaser.min.js dist/",
    "lint": "eslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/drhayes/blaster"
  },
  "author": "David Hayes <drhayes@gmail.com> (http://drhayes.io/)",
  "license": "ISC",
  "homepage": "https://bitbucket.org/drhayes/blaster",
  "devDependencies": {
    "esbuild": "0.25.0",
    "keycode": "^2.1.0"
  }
}
